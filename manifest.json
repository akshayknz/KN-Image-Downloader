{
"update_url": "https://clients2.google.com/service/update2/crx",

    "name": "KN Image Downloader",
    "description": "Downloads all tabs that open jpeg/jpg/png/webp/gif image files natively using chrome.downloads.download() method.",
    "version": "0.0.0.1",
	"manifest_version" : 3,
    "icons": {
        "16": "img/logo_inspector_16x16.png",
        "32": "img/logo_inspector_32x32.png",
        "48": "img/logo_inspector_48x48.png",
        "128": "img/logo_inspector_128x128.png"
    },
    "action": {
        "default_icon": "img/logo_inspector_16x16.png",
        "default_title": "knz new tab is running",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "downloads"
    ]
 }